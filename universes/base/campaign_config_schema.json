{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": [
        "campaign_id",
        "name",
        "factions",
        "victory_conditions"
    ],
    "properties": {
        "campaign_id": {
            "type": "string"
        },
        "name": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "format": {
            "type": "string"
        },
        "missions": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "name",
                    "objectives"
                ],
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "objectives": {
                        "type": "array"
                    },
                    "prerequisites": {
                        "type": "array"
                    },
                    "rewards": {
                        "type": "object"
                    }
                }
            }
        },
        "starting_conditions": {
            "type": "object",
            "properties": {
                "factions": {
                    "type": "object"
                },
                "map_state": {
                    "type": "object"
                }
            }
        },
        "victory_conditions": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "type",
                    "description"
                ],
                "properties": {
                    "type": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "conditions": {
                        "type": "object"
                    },
                    "recurring": {
                        "type": "boolean"
                    }
                }
            }
        },
        "tech_tree": {
            "type": "object"
        },
        "economic_progression": {
            "type": "object"
        }
    }
}